      <Mass>144</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.2</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>20</Steel>
      <AAA_Crate_Maxim>4</AAA_Crate_Maxim>
    </costList>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
    <building>
      <turretGunDef>Artillery_QuadMaxim</turretGunDef>
      <turretBurstWarmupTime>2.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>2.0</turretBurstCooldownTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <!-- <li>PlaceWorker_ShowTurretRadius</li> -->
    </placeWorkers>
    <researchPrerequisites>
      <li>BlowbackOperation</li>
    </researchPrerequisites>
  </ThingDef>
  <!--=============== Mortar turret ===============-->
  <ThingDef ParentName="BaseWeaponTurret" Name="AAA_BaseQuadMaxim" Abstract="True">
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>Artillery</li>
    </weaponTags>
    <comps>
      <li Class="AAA.CompProperties_ReproductiveProjectile">
        <loadcount>17</loadcount>
      </li>
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>AAA_MachineGunAmmo</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>AAA_MachineGunAmmo</li>
          </categories>
