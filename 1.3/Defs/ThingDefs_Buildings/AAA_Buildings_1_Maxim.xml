  <!-- Turret def single maxim -->
  <ThingDef ParentName="BaseWeaponTurret" Name="AAA_BaseSingleMaxim" Abstract="True">
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>Artillery</li>
    </weaponTags>
    <comps>
      <li Class="AAA.CompProperties_ReproductiveProjectile">
        <loadcount>71</loadcount>
      </li>
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>AAA_MachineGunAmmo</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>AAA_MachineGunAmmo</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  <ThingDef ParentName="AAA_BaseSingleMaxim">
    <defName>Artillery_Maxim</defName>
    <label>Maxim</label>
    <description>a 7.62mm machine gun .</description>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <graphicData>
      <texPath>AAA/turret/TurretTop_FixedMaxim</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.46</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>10.00</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <!--warmupTime>8.8</warmupTime-->
        <forcedMissRadius>0</forcedMissRadius>
        <requireLineOfSight>true</requireLineOfSight>
        <minRange>1</minRange>
        <range>35</range>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>11</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!--=============== QudMaxim ===============-->
  <ThingDef ParentName="BuildingBase">
