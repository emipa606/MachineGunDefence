  <ThingDef ParentName="AAA_BaseQuadMaxim">
    <defName>Artillery_QuadMaxim</defName>
    <label>Quad Maxim</label>
    <description>quadruple 7.62mm machine gun. leaves gun crates when deconstructed.</description>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <graphicData>
      <texPath>AAA/turret/TurretTop_QuadMaxim</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.30</AccuracyTouch>
      <AccuracyShort>0.30</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <verbs>
      <li>
        <verbClass>AAA_Verb_ShootMultiple</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>8.8</warmupTime>
        <forcedMissRadius>0.0</forcedMissRadius>
        <requireLineOfSight>true</requireLineOfSight>
        <minRange>2</minRange>
        <range>34</range>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>11</ticksBetweenBurstShots>
        <soundCast>AAA_machinegun_shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <!-- ======== Crate ======== -->
  <ThingDef ParentName="ResourceBase">
    <defName>AAA_Crate_Maxim</defName>
    <label>Maxim machine gun crate</label>
    <description>7.62mm maxim machine gun. This is too heavy to hold. you need to make a turret for this.</description>
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <texPath>AAA/Crate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>2050</MarketValue>
      <Mass>27</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>
</Defs>
